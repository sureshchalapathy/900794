<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="portalportal.controller.view3"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Planned Order Details">
				<content>
					<VBox alignItems="Center" alignContent='Center' fitContainer='true'>
					<items>
					<Table id="Mara" items="{/results}">
					  <columns>
					    <Column>
					      <Text text="Order Number" />
					    </Column>
					    <Column>
					      <Text text="Material" />
					    </Column>
					    <Column>
					      <Text text="Plant" />
					    </Column>
					     <Column>
					      <Text text="Order Type" />
					    </Column>
					     <Column>
					      <Text text="Total Qty" />
					    </Column>
					     <Column>
					      <Text text="OrderStartDate" />
					    </Column>
					     <Column>
					      <Text text="OrderFinDate" />
					    </Column>
					  </columns>
					  <items>
					    <ColumnListItem>
					      <cells>
					        <Text text="{PlannedorderNum}"></Text>
					        <Text text="{Material}"></Text> 
					        <Text text="{PlanPlant}" ></Text>
					        <Text text="{OrderType}"></Text> 
					        <Text text="{TotalPlordQty}" ></Text>
					        <Text text="{OrderStartDate}" ></Text>
					        <Text text="{OrderFinDate}" ></Text>
					      </cells>
					    </ColumnListItem>
					  </items>
					</Table>
				</items>
				</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>